/* General widget styles */
QWidget {
    font-family: 'Meiryo UI', sans-serif;
    font-size: 10pt;
    selection-background-color: #6A9EDB;
    selection-color: white;
}

/* Group boxes */
QGroupBox {
    border: 1px solid #D8D8D8;
    border-radius: 6px;
	margin-bottom:8px;
    padding-top: 15px;
    padding-bottom: 8px;
    padding-left: 8px;
    padding-right: 8px;
    background-color: #F5F5F5;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 2px 6px;
    margin-top: 3px;
    margin-left: 0px;
    background-color: transparent;
    color: #000;
    font-weight: 600;
}

/* Buttons */
QPushButton {
    background-color: #EDEDED;
    border: 1px solid #D0D0D0;
    border-radius: 4px;
    padding: 5px 12px;
	margin-top: 5px;
    min-width: 80px;
    color: #444444;
}

QPushButton:hover {
    background-color: #E5E5E5;
    border-color: #C0C0C0;
}

QPushButton:pressed {
    background-color: #D8D8D8;
    border-color: #B0B0B0;
}

QPushButton:disabled {
    background-color: #F0F0F0;
    color: #A0A0A0;
}

/* List widgets */
QListWidget {
    background-color: #F0F0F0;
    border: 1px solid #D8D8D8;
    border-radius: 4px;
    padding: 2px;
	margin-top: 10px;
    outline: 0;
}

QListWidget::item {
    padding: 6px 8px;
    border-radius: 4px;
}

QListWidget::item:hover {
    background-color: #E8E8E8;
}

QListWidget::item:selected {
    background-color: #6A9EDB;
    color: white;
}

/* Text browsers and editors */
QTextBrowser, QTextEdit {
    background-color: #F5F5F5;
    border: 1px solid #D8D8D8;
    border-radius: 4px;
    padding: 4px;
	margin-top:10px;
    selection-background-color: #6A9EDB;
    selection-color: white;
    font-family: 'Meiryo UI', Arial, sans-serif;
    font-size: 11pt;
}

/* Scroll bars */
QScrollBar:vertical {
    border: none;
    background: #F0F0F0;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background: #C8C8C8;
    min-height: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: none;
    background: #F0F0F0;
    height: 10px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background: #C8C8C8;
    min-width: 20px;
    border-radius: 4px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* Splitter */
QSplitter::handle {
    background-color: #E0E0E0;
    width: 4px;
}

QSplitter::handle:hover {
    background-color: #D0D0D0;
}

/* Tooltips */
QToolTip {
    background-color: #4A4A4A;
    color: #F0F0F0;
    border: 1px solid #5A5A5A;
    border-radius: 4px;
    padding: 4px 8px;
}

/* Header text specific style */
#headerText {
    padding: 8px;
}

/* Content browser specific style */
#contentBrowser {
    padding: 8px;
}

/* Mail list specific style */
#mailList {
    background-color: #F0F0F0;
}

#create_button {
    background-color: rgb(24, 155, 255);
	color:rgb(255, 255, 255);
	font-size:18px;
	font-weight:bold;
	min-height:20px;
}

#create_button::hover {
    background-color: rgb(17, 112, 180);
}

#create_button::pressed {
    background-color: rgb(21, 141, 226);
}

#change_link{
	min-width:20px;
	padding: 2px 2px;
}</string>
